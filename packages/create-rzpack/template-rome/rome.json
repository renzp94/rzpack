{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"files": {
		"ignore": ["node_modules/*", "dist/*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useAltText": "off",
				"useKeyWithClickEvents": "off"
			},
			"correctness": {
				"noUnusedVariables": "warn"
			},
			"style": {
				"useBlockStatements": "error"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noExtraNonNullAssertion": "error"
			},
			"nursery": {
				"noConsoleLog": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 80
	},
	"organizeImports": {
		"enabled": true
	}
}
